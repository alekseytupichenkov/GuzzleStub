{
    "name": "alekseytupichenkov/guzzle_stub",
    "description": "This repository provides guzzle stubs with flexible fixtures",
    "keywords": ["guzzle", "stub", "testing", "fixtures", "mocking", "mock"],
    "type": "guzzle-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Tupichenkov Aleksey",
            "homepage": "https://tupichenkov.com/"
        }
    ],
    "require": {
        "php": "^7.0",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.35|^5.7|^6.1",
        "phpstan/phpstan": "^0.9.2"
    },
    "autoload": {
        "psr-4": {
            "Alekseytupichenkov\\GuzzleStub\\": "src",
            "Alekseytupichenkov\\GuzzleStub\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan analyse -l 7 src/"
        ],
        "travis": [
            "phpunit --coverage-clover build/logs/clover.xml",
            "phpstan analyse -l 7 src/"
        ]
    }
}
